          var ovt=20;//Hour at which over time starts
          var Trip=40;//Hour at which triple time starts.
          var tax = .10; //unit =$'s
          var hour;
          var str="";
          var Rate = 11.50;
          var gross= [];
          var taxes= [];
          var hour= [];
          var netPay = [];
          var payRate=[];

         
        //output the balance
       for(var h=0; h<=72; h++){
        
       }
