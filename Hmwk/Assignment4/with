        <script type="text/javascript">
        //Generate a table
        for(var hour=1; hour<=72;hour++){
        hour[h]= h;
        gross[h]= hour[h]*payRate;
        taxes[h]= gross[h] * tax;
        netPay[h]= gross[h] - taxes[h];
        payRate[h]= Rate;
         
            str+="<tr>";
            str+="<td>"+hour[h]+"</td>";
            str+="<td>"+gross[h]+"</td>";
            str+="<td>"+payRate[h]+"</td>";
            str+="<td>"+taxes[h]+"</td>";
            str+="<td>"+netPay[h]+"</td>";
            
            str+="</tr>";
            
            
        }
        document.write(str);
